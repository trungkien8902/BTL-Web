@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Register</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
    <style>
        .register {
            margin-left: 30px;
        }
    </style>
</head>
<body>

    <div class="register">
        <h1 class="pt-4">Register</h1>

        <div class="row pt-4">
            <div class="col-md-7 ">
                <form id="registerForm" class="row" method="post">
                    <h2>Create a new account.</h2>
                    <hr />
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-floating py-2 col-6">
                        <input class="form-control" autocomplete="username" aria-required="true" />
                        <label>Email</label>
                    </div>
                    <div class="form-floating py-2 col-6">
                        <input class="form-control" aria-required="true" />
                        <label>Name</label>
                    </div>

                    <div class="form-floating py-2 col-6">
                        <input asp-for="Input.PhoneNumber" class="form-control" aria-required="true" />
                        <label>PhoneNumber</label>
                    </div>
                    <div class="form-floating py-2 col-6">
                        <input class="form-control" aria-required="true" />
                        <label>Address</label>
                    </div>

                    <div class="form-floating py-2 col-6">
                        <input class="form-control" autocomplete="new-password" aria-required="true" />
                        <label>Password</label>
                    </div>
                    <div class="form-floating py-2 col-6">
                        <input class="form-control" autocomplete="new-password" aria-required="true" />
                        <label>Confirm Password</label>
                    </div>

                    <button id="registerSubmit" type="submit" class="w-100 btn btn-primary">Register</button>
                </form>
            </div>
        </div>

    </div>


    @section Scripts {
        <script>
            $(document).ready(function () {
                $('#Input_Role').change(function () {
                    var selection = $('#Input_Role Option:Selected').text();
                    if (selection != 'Company') {
                        $('#Input_CompanyId').hide();
                    }
                    else {
                        $('#Input_CompanyId').show();
                    }
                })
            })
        </script>
    }

</body>
</html>
