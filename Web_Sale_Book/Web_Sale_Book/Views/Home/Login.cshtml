@{
    ViewData["Title"] = "Log in";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
<style>
    .login {
        margin-left: 30px;
    }
    .point:hover {
        cursor: pointer;
    }
</style>

<div class="login">

    <h1>@ViewData["Title"]</h1>
    <div class="row">
        <div class="col-md-4">
            <section>
                <form id="account" method="post">
                    <h2>Use a local account to log in.</h2>
                    <hr />
                    <div class="text-danger"></div>
                    <div class="form-floating">
                        <input class="form-control" autocomplete="username" />
                        <label class="form-label">Email</label>
                    </div>
                    <div class="form-floating">
                        <input class="form-control" autocomplete="current-password" />
                        <label class="form-label">Password</label>
                    </div>
                    <div>
                        <div class="checkbox">
                            <label class="form-label">
                                <input type="checkbox" class="form-check-input point" />
                                RememberMe
                            </label>
                        </div>
                    </div>
                    <div>
                        <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Log in</button>
                    </div>
                    <div>
                        <p>
                            <a href="#" class="point" id="forgot-password">Forgot your password?</a>
                        </p>
                        <p>
                            <a href="#" class="point">Register as a new user</a>
                        </p>
                        <p>
                            <a href="#" class="point" id="resend-confirmation">Resend email confirmation</a>
                        </p>
                    </div>
                </form>
            </section>
        </div>
    </div>
</div>
